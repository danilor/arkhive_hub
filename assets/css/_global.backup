*{

}

body{
    background-image: url(./../img/background.png);
    background-repeat: repeat;
    background-size: 50%;
    position: relative;
}

$bubbleColor: yellow;


.main{
    width: 100vw;
    height: 100vh;
    @include flex();
    @include flex_absolute_center(); 
    z-index: 10;

    position: relative;

    .box{
        position: relative;
        .element{
            // border: 1px solid red;
            
            width: 100%;
            height: 100%;
            position: absolute;
            top: 0;
            left: 0;
            z-index: 10;
            // transform: rotate(45deg);
            /*@include flex();
            @include flex_justify(flex-start);
            @include flex_align(center);*/
            .bubble{
                @include flex();
                @include flex_absolute_center();
                width: 35%;
                height: 35%;
                position: absolute; 
                top: 0;
                left: 0;
                // transform: translateX(-50%) translateY(-50%);
                border-radius: 50%;
                background-color: $bubbleColor;
                z-index:999;
                // rotate: -45deg;     
                cursor: pointer;
                @include set_transition(all 200ms ease);
                &:hover{
                    @include set_shadow( 0px 2px 40px 4px rgba(0,0,0,0.58));
                    @include set_transition(all 200ms ease);
                }
            }

            .arrow{
                cursor: pointer;
                width: 29%;
                height: 29%; 
                background-color: $bubbleColor;
                position: absolute;
                top: -12%;
                left: -12%;
                /*position: absolute;
                top:0;
                left:0;*/
                border-top-right-radius: 50%;
                border-bottom-left-radius: 50%;
            }
        }
 
    $totalItems: 6;

    @for $i from 1 through $totalItems {

        $deg: 360deg / $totalItems * $i;
        $neg_deg: -1 * $deg;
        .element:nth-child(#{$i}) {
            transform: rotate($deg);
            .bubble{
                transform: translateX(-50%) translateY(-50%) rotate($neg_deg);
            }
        }
    }

       // background-color: black;
        width: 20vw;
        // padding: 20%;
        @include border_rad(50%);
        padding: 50px 20px;
        @include max_tablet{
            width: 35vw;
        }
        @include max_mobile{
            width: 50vw;
        }
        img{
            width: 100%;
            z-index: 100;
        }
    }

}
 